{
    "version": 2,
    "builds": [
        {
            "src": "public/**",
            "use": "@vercel/static"
        },
        {
            "src": "api/*.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/manifest.json",
            "headers": {
                "Cache-Control": "public, max-age=0, must-revalidate"
            },
            "dest": "/public/manifest.json"
        },
        {
            "src": "/api/(.*)",
            "dest": "/api/$1.js"
        },
        {
            "src": "/(.*)",
            "dest": "/public/$1"
        }
    ]
}